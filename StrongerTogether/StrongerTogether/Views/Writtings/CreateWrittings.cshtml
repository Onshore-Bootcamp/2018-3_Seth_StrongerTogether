@using StrongerTogether.Models
@model Writtings

@{
    ViewBag.Title = "CreateWrittings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-danger">
        @TempData["Message"].ToString()
    </div>
}
<h2>Creative Writting</h2>

@if ((long)Session["Role"] >= 1)
{
    using (Html.BeginForm("CreateWrittings", "Writtings", FormMethod.Post))
    {
        <div class="form-horizontal">

            @Html.LabelFor(model => Model.Title)
            <div class="form-group">
                @Html.TextBoxFor(model => Model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.Title, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => Model.Content)
            <div class="form-group">
                @Html.TextAreaFor(model => Model.Content, new { style = "max-width: 100%; width: 50%;", @class = "form-control", rows = "8" })
                @Html.ValidationMessageFor(model => Model.Content, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Create Away" />
            </div>
        </div>
    }
}



