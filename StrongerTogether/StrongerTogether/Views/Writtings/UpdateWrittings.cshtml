@using StrongerTogether.Models
@model Writtings
@{
    ViewBag.Title = "UpdateWrittings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Writtings</h2>

@if ((long?)Session["Role"] >= 1)
{
    using (Html.BeginForm("UpdateWrittings", "Writtings", FormMethod.Post))
    {
        <div class="form-horizontal">
            @Html.HiddenFor(model => Model.UserId)
            @Html.HiddenFor(model => Model.WrittingId)
            @Html.LabelFor(model => Model.Title)
            <div class="form-group">
                @Html.TextBoxFor(model => Model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.Title, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => Model.Content)
            <div class="form-group">
                @Html.TextAreaFor(model => Model.Content, new { style = "max-width: 100%; width: 50%;", @class = "form-control", rows = "8" })
                @Html.ValidationMessageFor(model => Model.Content, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit" value="Update" />
            </div>
        </div>
    }
}
